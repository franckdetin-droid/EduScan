<script>
    // --- FONCTION PARLER (VOIX) ---
    function parler(message) {
        window.speechSynthesis.cancel();
        const voix = new SpeechSynthesisUtterance(message);
        voix.lang = 'fr-FR';
        window.speechSynthesis.speak(voix);
    }

    // --- FONCTION IA SCAN (PHOTO -> TEXTE) ---
    function demarrerIA() {
        const file = document.getElementById('input-file').files[0];
        const loading = document.getElementById('loading');
        const output = document.getElementById('box-copie');

        if (!file) return;

        loading.style.display = 'block';
        parler("Analyse de ta copie en cours. Je lis ton √©criture, patiente un instant.");

        Tesseract.recognize(file, 'fra').then(({ data: { text } }) => {
            loading.style.display = 'none';
            output.value = text;
            parler("C'est bon ! J'ai fini de lire ta copie. Tu peux cliquer sur corriger.");
        });
    }

    // --- FONCTION CORRECTION AUTOMATIQUE ---
    function corrigerMaintenant() {
        const copie = document.getElementById('box-copie').value.toLowerCase();
        const corrige = document.getElementById('box-corrige').value.toLowerCase();
        
        if(!copie || !corrige) {
            alert("Il faut d'abord scanner une photo et remplir le corrig√© !");
            return;
        }

        const motsCles = corrige.split(/[\s,.]+/).filter(m => m.length > 3);
        let points = 0;
        motsCles.forEach(m => { if(copie.includes(m)) points++; });

        let note = Math.round((points / motsCles.length) * 20) || 0;
        
        document.getElementById('resultats').style.display = 'block';
        document.getElementById('val-note').innerText = note + "/20";

        let avis = "";
        if(note >= 16) avis = "Bravo ! C'est un excellent r√©sultat. Tu as bien compris la le√ßon.";
        else if(note >= 10) avis = "C'est la moyenne. Tu as compris l'essentiel mais il manque des d√©tails importants.";
        else avis = "Ne sois pas triste ! Comme le b√©b√© qui apprend √† marcher, chaque erreur te fait grandir. Fais l'exercice pour t'am√©liorer.";

        document.getElementById('feedback-vocal').innerHTML = "<b>üéôÔ∏è Coach Vocal :</b> " + avis;
        parler("Ta note est de " + note + " sur 20. " + avis);
    }

    // --- FONCTION G√âN√âRATEUR D'EXERCICES (REMEDIATION) ---
    function genererExo() {
        const zone = document.getElementById('zone-exo');
        const txt = document.getElementById('texte-exo');
        const classe = document.getElementById('classe-user').value;
        
        zone.style.display = 'block';
        let exercice = "";

        if(classe === "5eme") {
            exercice = "PCT : Explique la diff√©rence entre un circuit en s√©rie et un circuit en d√©rivation. Dessine les deux sch√©mas.";
        } else if(classe === "lycee") {
            exercice = "Physique : En utilisant la loi d'Ohm (U=RI), calcule la r√©sistance si la tension est de 12V et l'intensit√© de 2A.";
        } else {
            exercice = "Fran√ßais : Trouve 5 adjectifs dans ton corrig√© et utilise-les dans de nouvelles phrases.";
        }

        txt.innerText = exercice;
        parler("Voici ton exercice de rattrapage. Rel√®ve le d√©fi !");
    }
</script>

